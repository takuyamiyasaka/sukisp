<div class="container">
	<h1>ジャンル編集画面</h1>
	<%= form_for(@genre,url:"/admins/genres/#{@genre.id}") do |f|%>
	<b>ジャンル</b>
	<%= f.text_field :genre_name %>
	<%= f.radio_button :is_valid ,true %>
	<%= label_tag :is_valid, "有効" %>
	<%= f.radio_button :is_valid ,false %>
	<%= label_tag :is_vaild,"無効" %>
	<%= f.submit "変更を保存する" ,class:"btn btn-primary"%>
	<% end %>
</div>