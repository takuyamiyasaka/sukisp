<h1>管理者　ジャンル一覧ページ</h1>
	<% if @genre.errors.any? %>
		<h2 class="text-danger"><%= @genre.errors.count %>つのエラー</h2>
			<ul class="text-danger">
				<% @genre.errors.full_messages.each do |message|%>
				<li><%= message %></li>
				<%end%>
			<%end%></ul>
	<%= form_for(@genre,url:admins_genres_path) do |f| %>
		<%= f.text_field :genre_name %>
		<%= f.submit "追加" ,class:"btn btn-info" %>
	<% end %>


	<h1>ジャンル一覧</h1>
	<table class="table table-bordered">
		<thead>
			<tr>
				<th>ジャンル</th>
				<th>ステータス</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @genres.each do |genre| %>
			<tr>
				<td><%= genre.genre_name %></td>
				<td>
					<%if genre.is_valid == true %>
						<p>有効</p>
					<% else %>
						<p>無効</p>
					<%end%>
				</td>
				<td><%= link_to "編集する", edit_admins_genre_path(genre) %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
