<% topick_comment.each do |comment| %>
	<%= comment.customer.public_name %>
	<%= attachment_image_tag comment, :image, :fill, 50,50, format: "jpeg" %>
	<%= comment.comment %>
	<%= comment.created_at %>

	<% if comment.customer == current_customer %>
		<%= link_to "削除", topick_comment_path(comment.topick_id, comment.id), method: :delete ,remote:true %>
		<% end %>
	<% end %>