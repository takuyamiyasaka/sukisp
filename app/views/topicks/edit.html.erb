<h1>話題編集ページ</h1>
<%= form_for @topick, url: topick_path  do |f| %>
	<%= f.collection_select(:genre_id, Genre.all, :id, :genre_name) %><br>
	<%= f.attachment_field :topick_images_topick_images, multiple: true %>
	<%= f.label :題名 %>
	<%= f.text_field :topick_name %><br>
	<%= f.label :内容 %>
	<%= f.text_area :introduction %><br>
	<%= f.submit "更新" %>
<% end %>
	<%= attachment_image_tag @toppick,:topick_image, :fill, 50,50, format: "jpeg" %>
	<%= link_to "消去",topick_path(@topick), method: :delete %>